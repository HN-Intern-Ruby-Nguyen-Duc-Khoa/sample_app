<% provide(:title, t(".main_title")) %>
<% provide(:button_text, t(".button_text")) %>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <h1><%= t ".main_title" %></h1>
    <%= render "form" %>
    <div class="gravatar_edit">
      <%= gravatar_for @user, size: Settings.users.show.img_size  %>
      <%= link_to t(".a_text"), Settings.users.email_href, target: "_blank" %>
    </div>
  </div>
</div>
