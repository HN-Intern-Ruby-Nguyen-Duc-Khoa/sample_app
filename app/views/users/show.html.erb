<% provide :title, @user.name %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user, size: Settings.users.show.img_size  %>
        <%= @user.name %>
        <%= @user.email %>
      </h1>
    </section>
  </aside>
  <div class="col-md-8">
    <%= render "follow_form" if logged_in? %>
    <% if @microposts.any? %>
      <h3>Microposts (<%= @microposts.count %>)</h3>
      <ul class="microposts">
        <%= render @microposts %>
      </ul>
      <%== pagy_bootstrap_nav(@pagy) %>
    <% end %>
  </div>
</div>
